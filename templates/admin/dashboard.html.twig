{% extends '@EasyAdmin/layout.html.twig' %}

{% block main %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">
                    <i class="bi bi-speedometer2"></i>
                    S4A Experiment Dashboard
                </h1>
                <p class="text-muted mb-4">Welcome to the admin dashboard. Monitor your multimodal experiment progress.</p>
            </div>
        </div>

        <!-- Statistics Cards Row -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card border-primary">
                    <div class="card-body text-center">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title text-primary mb-1">Music → Aroma</h5>
                                <h2 class="mb-0 text-primary">{{ music2aromaCount }}</h2>
                                <small class="text-muted">Completed Trials</small>
                            </div>
                            <div class="text-primary">
                                <i class="bi bi-music-note-beamed" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3">
                <div class="card border-success">
                    <div class="card-body text-center">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title text-success mb-1">Aroma → Music</h5>
                                <h2 class="mb-0 text-success">{{ aroma2musicCount }}</h2>
                                <small class="text-muted">Completed Trials</small>
                            </div>
                            <div class="text-success">
                                <i class="bi bi-flask-florence" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3">
                <div class="card border-info">
                    <div class="card-body text-center">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title text-info mb-1">Total Trials</h5>
                                <h2 class="mb-0 text-info">{{ totalTrials }}</h2>
                                <small class="text-muted">All Completed</small>
                            </div>
                            <div class="text-info">
                                <i class="bi bi-check2-square" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3">
                <div class="card border-warning">
                    <div class="card-body text-center">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title text-warning mb-1">Completion Rate</h5>
                                <h2 class="mb-0 text-warning">
                                    {% set currentTrials = music2aromaCount + aroma2musicCount %}
                                    {% if currentTrials > 0 %}
                                        100%
                                    {% else %}
                                        0%
                                    {% endif %}
                                </h2>
                                <small class="text-muted">Trial Participation</small>
                            </div>
                            <div class="text-warning">
                                <i class="bi bi-graph-up-arrow" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Row -->
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-graph-up"></i>
                            Trials Activity - Last 12 Hours
                        </h5>
                    </div>
                    <div class="card-body" style="height: 400px;">
                        {{ render_chart(hourlyTaskChart) }}
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-pie-chart"></i>
                            Songs by Flavor Distribution
                        </h5>
                    </div>
                    <div class="card-body" style="height: 400px;">
                        {{ render_chart(songByFlavor) }}
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional Information Row -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-info-circle"></i>
                            Experiment Overview
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Music to Aroma Task</h6>
                                <p class="text-muted">Participants listen to music and match it with corresponding aromas, testing cross-modal sensory associations.</p>
                            </div>
                            <div class="col-md-6">
                                <h6>Aroma to Music Task</h6>
                                <p class="text-muted">Participants experience aromas and select matching musical pieces, exploring how scents influence musical preferences.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock main %}
