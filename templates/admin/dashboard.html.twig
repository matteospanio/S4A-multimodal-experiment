{% extends '@EasyAdmin/layout.html.twig' %}

{% block main %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">
                    <i class="bi bi-speedometer2"></i>
                    S4A Experiment Dashboard
                </h1>
                <p class="text-muted mb-4">{{ 'admin.message'|trans }}</p>
            </div>
        </div>

        <!-- Statistics Cards Row -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card border-primary">
                    <div class="card-body text-center">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title text-primary mb-1">{{ 'general.music'|trans }} → {{ 'general.aroma'|trans }}</h5>
                                <h2 class="mb-0 text-primary">{{ music2aromaCount }}</h2>
                                <small class="text-muted">{{ 'admin.trials.completed'|trans }}</small>
                            </div>
                            <div class="text-primary">
                                <i class="bi bi-music-note-beamed" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-success">
                    <div class="card-body text-center">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title text-success mb-1">{{ 'general.aroma'|trans }} → {{ 'general.music'|trans }}</h5>
                                <h2 class="mb-0 text-success">{{ aroma2musicCount }}</h2>
                                <small class="text-muted">{{ 'admin.trials.completed'|trans }}</small>
                            </div>
                            <div class="text-success">
                                <i class="bi bi-flask-florence" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-info">
                    <div class="card-body text-center">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title text-info mb-1">{{ 'admin.trials.total'|trans }}</h5>
                                <h2 class="mb-0 text-info">{{ totalTrials }}</h2>
                                <small class="text-muted">{{ 'admin.trials.all_completed'|trans }}</small>
                            </div>
                            <div class="text-info">
                                <i class="bi bi-check2-square" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-warning">
                    <div class="card-body text-center">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title text-warning mb-1">{{ 'admin.trials.completion_rate'|trans }}</h5>
                                <h2 class="mb-0 text-warning">
                                    {{ percentageCompleted }}%
                                </h2>
                                <small class="text-muted">{{ 'admin.trials.participation'|trans }}</small>
                            </div>
                            <div class="text-warning">
                                <i class="bi bi-graph-up-arrow" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Row -->
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-graph-up"></i>
                            {{ 'admin.chart.activity'|trans({'%hours%': 12}) }}
                        </h5>
                    </div>
                    <div class="card-body" style="height: 400px;">
                        {{ render_chart(hourlyTaskChart) }}
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-pie-chart"></i>
                            {{ 'admin.chart.distribution'|trans }}
                        </h5>
                    </div>
                    <div class="card-body" style="height: 400px;">
                        {{ render_chart(songByFlavor) }}
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional Information Row -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-info-circle"></i>
                            Experiment Overview
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>{{ 'home.task_1.title'|trans }}</h6>
                                <p class="text-muted">{{ 'admin.task1'|trans }}</p>
                            </div>
                            <div class="col-md-6">
                                <h6>{{ 'home.task_2.title'|trans }}</h6>
                                <p class="text-muted">{{ 'admin.task2'|trans }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock main %}
