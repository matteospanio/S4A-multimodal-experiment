{% extends 'base.html.twig' %}

{% block title %}S4A Experiment - Main Menu{% endblock %}

{% block body %}
<div class="container">
    <div class="app-header">
        <img src="{{ asset('images/logo-red-s4a.svg') }}" alt="S4A Logo" >
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <a
                class="card task-card"
                href="{{ path('app_task', {type: 1}) }}"
            >
                <div class="card-body">
                    <div class="icon-lg text-primary">
                        🎵
                    </div>
                    <h3 class="card-title">{{ 'general.task'|trans }} 1: {{ 'home.task_1.title'|trans }}</h3>
                    <p class="card-text">
                        {{ 'home.task_1.description'|trans }}
                    </p>
                    <div class="mt-3">
                        <span class="text-secondary">🎵 {{ 'general.audio'|trans({'%count%': 2}) }}</span><br>
                        <span class="text-secondary">👃 {{ 'general.perfume'|trans({'%count%': 1}) }} {{ 'home.to.smell'|trans }}</span>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6">
            <a
                class="card task-card"
                href="{{ path('app_task', {type: 2}) }}"
            >
                <div class="card-body">
                    <div class="icon-lg text-primary">
                        🌺
                    </div>
                    <h3 class="card-title">{{ 'general.task'|trans }} 2: {{ 'home.task_2.title'|trans }}</h3>
                    <p class="card-text">
                        {{ 'home.task_2.description'|trans }}
                    </p>
                    <div class="mt-3">
                        <span class="text-secondary">🎵 {{ 'general.audio'|trans({'%count%': 1}) }}</span><br>
                        <span class="text-secondary">👃 {{ 'general.perfume'|trans({'%count%': 2}) }} {{ 'home.to.choose_from'|trans }}</span>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
{% endblock %}
