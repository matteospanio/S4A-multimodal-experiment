{% extends 'base.html.twig' %}

{% block title %}Sign In - S4A Multimodal Experiment{% endblock %}

{% block body %}
<div class="login-container">
    {% if app.user %}
        <div class="already-logged-in">
            ðŸ§ª You are already logged in as <strong>{{ app.user.userIdentifier }}</strong>
            <br>
            <a href="{{ path('app_logout') }}">Click here to logout</a>
        </div>
    {% endif %}

    <div class="login-card">
        <div class="login-header">
            <span class="app-icon">ðŸ§ª</span>
            <h1>S4A Experiment</h1>
            <p style="margin: 0; opacity: 0.9; font-size: 0.9rem;">Please sign in to continue</p>
        </div>

        <div class="login-body">
            {% if error %}
                <div class="alert alert-danger mb-4">
                    ðŸš« {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post">
                <div class="form-group">
                    <label for="username">ðŸ‘¤ Username</label>
                    <input type="text"
                           value="{{ last_username }}"
                           name="_username"
                           id="username"
                           class="form-control"
                           autocomplete="username"
                           placeholder="Enter your username"
                           required
                           autofocus>
                </div>

                <div class="form-group">
                    <label for="password">ðŸ”‘ Password</label>
                    <input type="password"
                           name="_password"
                           id="password"
                           class="form-control"
                           autocomplete="current-password"
                           placeholder="Enter your password"
                           required>
                </div>

                <input type="hidden" data-controller="csrf-protection" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-login" type="submit">
                    ðŸš€ Sign In
                </button>
            </form>

            <div class="login-footer">
                Science4All Multimodal Experiment Platform
            </div>
        </div>
    </div>
</div>
{% endblock %}
