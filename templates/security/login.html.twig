{% extends 'base.html.twig' %}

{% block title %}{{ 'login.sign_in'|trans }} - S4A Experiment{% endblock %}

{% block body %}
<div class="login-container">
    {% if app.user %}
        <div class="already-logged-in">
            ðŸ§ª {{ 'login.already_logged_in'|trans }} <strong>{{ app.user.userIdentifier }}</strong>
            <br>
            <a href="{{ path('app_logout') }}">{{ 'login.click_to_logout'|trans }}</a>
        </div>
    {% endif %}

    <div class="login-card">
        <div class="login-header">
            <span class="app-icon">ðŸ§ª</span>
            <h1>S4A {{ 'general.experiment'|trans }}</h1>
            <p style="margin: 0; opacity: 0.9; font-size: 0.9rem;">{{ 'login.sign_in_to_continue'|trans }}</p>
        </div>

        <div class="login-body">
            {% if error %}
                <div class="alert alert-danger mb-4">
                    ðŸš« {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post">
                <div class="form-group">
                    <label for="username">ðŸ‘¤ Username</label>
                    <input type="text"
                           value="{{ last_username }}"
                           name="_username"
                           id="username"
                           class="form-control"
                           autocomplete="username"
                           placeholder="{{ 'login.username_placeholder'|trans }}"
                           required
                           autofocus>
                </div>

                <div class="form-group">
                    <label for="password">ðŸ”‘ Password</label>
                    <input type="password"
                           name="_password"
                           id="password"
                           class="form-control"
                           autocomplete="current-password"
                           placeholder="{{ 'login.password_placeholder'|trans }}"
                           required>
                </div>

                <input type="hidden" data-controller="csrf-protection" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button id="btn-login" class="btn btn-login" type="submit">
                    ðŸš€ {{ 'login.sign_in'|trans }}
                </button>
            </form>

            <div class="login-footer">
                Science4All Multimodal Experiment Platform
            </div>
        </div>
    </div>
</div>
{% endblock %}
